package cn.edu.ccut.action;

import org.apache.struts2.ServletActionContext;
import org.apache.struts2.convention.annotation.Action;
import org.apache.struts2.convention.annotation.Result;

import com.opensymphony.xwork2.ActionSupport;

import cn.edu.ccut.po.User;
import cn.edu.ccut.service.IUserService;

@SuppressWarnings("serial")
@Action(value = "/login", results = { @Result(name = { "success" }, location = "/admin/list/welcome.jsp"),
		@Result(name = { "fail" }, location = "/admin/login/login.jsp") })
public class LoginAction extends ActionSupport {
	private String errorMsg;
	private IUserService service;

	private User user;

	@Override
	public String execute() {
		if (ServiceFactory.getStudentService().login(user.getUsername(), user.getPassword())) {
			ServletActionContext.getRequest().getSession().setAttribute("username", user.getUsername());
			return "success";
		} else {
			errorMsg = "用户名或密码错误，请重新输入！";
			return "fail";
		}
	}

	public String getErrorMsg() {
		return errorMsg;
	}

	public IUserService getService() {
		return service;
	}

	public User getUser() {
		return user;
	}

	public void setErrorMsg(String errorMsg) {
		this.errorMsg = errorMsg;
	}

	public void setService(IUserService service) {
		this.service = service;
	}

	public void setUser(User user) {
		this.user = user;
	}
}