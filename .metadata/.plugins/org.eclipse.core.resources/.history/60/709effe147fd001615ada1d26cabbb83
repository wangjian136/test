package cn.edu.ccut.service.impl;

import javax.annotation.Resource;

import org.springframework.stereotype.Component;

import cn.edu.ccut.dao.IStudentDAO;
import cn.edu.ccut.dao.IUserDAO;
import cn.edu.ccut.po.User;
import cn.edu.ccut.service.IUserService;

@Component("studentService")
public class StudentService implements IUserService{
	private IStudentDAO studentDAO;

	public IStudentDAO getStudentDAO() {
		return studentDAO;
	}

	@Resource
	public void setStudentDAO(IStudentDAO studentDAO) {
		this.studentDAO = studentDAO;
	}

	@Override
	public boolean login(User user) {
		return dao.doLogin(user);
	}
	
}