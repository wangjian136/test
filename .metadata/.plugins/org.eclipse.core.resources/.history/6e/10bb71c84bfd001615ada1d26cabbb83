package cn.edu.ccut.action;

import java.util.List;

import javax.annotation.Resource;

import org.apache.struts2.convention.annotation.Action;
import org.apache.struts2.convention.annotation.Result;

import com.opensymphony.xwork2.ActionSupport;

import cn.edu.ccut.factory.ServiceFactory;
import cn.edu.ccut.service.IStudentService;
import cn.edu.ccut.po.Student;

@SuppressWarnings("serial")
@Action(value="/index",results={@Result(name={"success"},
location="/admin/list/first.jsp")})
public class ListAction extends ActionSupport {
	private List<Student> all;
	private int currentPage;
	private IStudentService studentService;
	@Override
	public String execute() {
		if (currentPage == 0 || "".equals(currentPage)) {
			currentPage = 1;
		}
		if (currentPage <= 0) {
			currentPage = 1;
		}
		all = studentService.listAll(Student.class.newInstance(),currentPage, 10);
		return "success";
	}

	public List<Student> getAll() {
		return all;
	}
	public int getCurrentPage() {
		return currentPage;
	}
	public IStudentService getStudentService() {
		return studentService;
	}
	
	public void setAll(List<Student> all) {
		this.all = all;
	}
	
	public void setCurrentPage(int currentPage) {
		this.currentPage = currentPage;
	}
	
	@Resource
	public void setStudentService(IStudentService studentService) {
		this.studentService = studentService;
	}
}