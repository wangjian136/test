package cn.edu.ccut.action;

import javax.annotation.Resource;

import org.apache.struts2.convention.annotation.Action;
import org.apache.struts2.convention.annotation.Result;

import com.opensymphony.xwork2.ActionSupport;

import cn.edu.ccut.service.IStudentService;
import cn.edu.ccut.factory.ServiceFactory;
import cn.edu.ccut.po.Student;

@SuppressWarnings("serial")
public class UpdateAction extends ActionSupport {
	private Student student;
	private String errorMsg;
	@Override
	@Action(value="/update",results={@Result(name={"success"},
	location="index?currentPage=1",type="chain"),@Result(name={"fail"},
	location="/admin/list/updateStudent.jsp")})
	public String execute() {
		Student vo = new Student();
		vo.setId(student.getId());
		vo.setName(student.getName());
		vo.setSex(student.getSex());
		vo.setAge(student.getAge());
		vo.setTel(student.getTel());
		vo.setLoc(student.getLoc());
		if (ServiceFactory.getStudentService().update(vo)) {
			return "success";
		} else {
			errorMsg = "修改学生失败，请重新修改！";
			return "fail";
		}
	}
	
	public Student getStudent() {
		return student;
	}
	public void setStudent(Student student) {
		this.student = student;
	}
	public String getErrorMsg() {
		return errorMsg;
	}
	public void setErrorMsg(String errorMsg) {
		this.errorMsg = errorMsg;
	}
}